{
    "appId": "com.temopus.miv",
    "artifactName": "minimal-image-viewer-${version}.${ext}",
    "productName": "Minimal Image Viewer",
    "copyright": "MINIMAL IMAGE VIEWER COPYRIGHT Â© 2021",
    "compression": "maximum",
    "publish": [
        {
            "provider": "github",
            "owner": "hayhaydz"
        }
    ],
    "directories": {
        "app": ".",
        "output": "out",
        "buildResources": "build-res"
    },
    "files": [
        "package.json",
        "app/**/*",
        "node_modules"
    ],
    "mac": {
        "target": "dmg",
        "category": "public.app-category.photography"
    },
    "win": {
        "target": ["nsis", "zip"]
    },
    "linux": {
        "target": ["AppImage", "deb"],
        "category": "Utility"
    },
    "dmg": {
        "background": null,
        "backgroundColor": "#f9f9f9f9",
        "window": {
            "width": "400",
            "height": "300"
        },
        "contents": [
            {
                "x": 100,
                "y": 100
            },
            {
                "x": 300,
                "y": 100,
                "type": "link",
                "path": "/Applications"
            }
        ]
    },
    "fileAssociations": [
        {
            "ext": "png",
            "name": "PNG",
            "role": "Viewer"
        },
        {
            "ext": "jpg",
            "name": "JPG",
            "role": "Viewer"
        },
        {
            "ext": "jpeg",
            "name": "JPEG",
            "role": "Viewer"
        }
    ]
}
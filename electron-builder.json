{
    "appId": "com.temopus.miv",
    "productName": "Minimal-Image-Viewer",
    "copyright": "MINIMAL IMAGE VIEWER",
    "directories": {
        "app": ".",
        "output": "out",
        "buildResources": "build-res"
    },
    "files": [
        "package.json",
        "app/**/*",
        "node_modules"
    ],
    "dmg": {
        "background": null,
        "backgroundColor": "#f9f9f9f9",
        "window": {
            "width": "400",
            "height": "300"
        },
        "contents": [
            {
                "x": 100,
                "y": 100
            },
            {
                "x": 300,
                "y": 100,
                "type": "link",
                "path": "/Applications"
            }
        ]
    },
    "mac": {
        "target": "dmg",
        "category": "public.app-category.utilities"
        },
    "win": {
        "target": "nsis"
    },
    "linux": {
        "target": "AppImage",
        "category": "Utility"
    },
    "fileAssociations": {
        "ext": [
        "png",
        "jpg",
        "jpeg"
        ],
        "role": "viewer"
    }
}
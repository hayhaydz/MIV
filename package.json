{
  "name": "miv",
  "version": "1.0.0",
  "description": "Minimal Image Viewer",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "fileAssociations": {
      "ext": [
        "png",
        "jpg",
        "jpeg"
      ],
      "role": "viewer"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hayhaydz/MIV.git"
  },
  "author": "Haydon",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hayhaydz/MIV/issues"
  },
  "homepage": "https://github.com/hayhaydz/MIV#readme",
  "devDependencies": {
    "electron": "^13.1.1",
    "electron-builder": "^22.11.7"
  },
  "dependencies": {
    "panzoom": "^9.4.2"
  }
}
